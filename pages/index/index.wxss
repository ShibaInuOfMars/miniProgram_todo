/* pages/index/index.wxss */
page {
  padding: 40rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  border: 2rpx solid #ccc;
  display: flex;
  height: 90rpx;
  align-items: center;
  padding: 0 20rpx;
  border-radius: 20rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
}

.header input {
  margin-left: 14rpx;
  flex: 1;
  color: #666;
}

/* 列表样式 */
.list {
  margin-top: 40rpx;
  border: 2rpx solid #ccc;
  border-bottom: none;
}

.list .item {
  border-bottom: 2rpx solid #ccc;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list .item text {
  flex: 1;
  margin-left: 18rpx;
  font-size: 32rpx;
  color: #666;
}

.list .item text.completed {
  text-decoration: line-through;
  color: #999;
}

/* 尾部样式 */
.footer {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}

/* 提示信息样式 */
.tips {
  text-align: center;
  padding-top: 300rpx;
  color: #666;
}

.title {
  font-size: 50rpx;
}

.desc {
  margin-top: 20rpx;
}
